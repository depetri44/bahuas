{{> partials/menu}}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="col-sm-12">
        <h2>Detalle de la  Venta</h2>
    </div>
    <div class="order-layout col-md-12">
        <ul class="list-group">
            <li class="list-group-item"><strong> {{ @root.__ "Fecha" }}: </strong><span class="float-right">{{formatDate result.created "DD/MM/YYYY hh:mmA"}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Numero de venta ID" }}: </strong><span class="float-right">{{result._id}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Referencia de Pago" }}: </strong><span class="float-right">{{result.gatewayReference}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Mensaje de MercadoPago    " }}: </strong><span class="float-right">{{result.gatewayMessage}}</span></li>
            {{#if result.approved}}
            <li class="list-group-item"><strong> {{ @root.__ "Aprobado" }}: </strong><span class="float-right text-success">{{result.approved}}</span></li>
            {{else}}
            <li class="list-group-item"><strong> {{ @root.__ "Aprobado" }}: </strong><span class="float-right text-danger">{{result.approved}}</span></li>
            {{/if}}
            <li class="list-group-item"><strong> {{ @root.__ "Pago" }}: </strong><span class="float-right">{{result.gateway}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Cantidad" }}: </strong><span class="float-right">{{currencySymbol config.currencySymbol}}{{formatAmount result.amount}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Divisa" }}: </strong><span class="float-right">{{toUpper result.currency}}</span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Cliente" }}: </strong><span class="float-right"><a href="/admin/customer/view/{{result.customer}}">{{result.customer}} {{{feather 'external-link'}}}</a></span></li>
            <li class="list-group-item"><strong> {{ @root.__ "Orden" }}: </strong><span class="float-right"><a href="/admin/order/view/{{result.order}}">{{result.order}} {{{feather 'external-link'}}}</a></span></li>
        </ul>
        <input type="hidden" id="transaction_id" value="{{result._id}}">
    </div>
</main>
